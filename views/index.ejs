<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Tracker</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet"> <!-- Google Fonts -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

:root {
    --primary-color: #3498db;
    --secondary-color: #2c3e50;
    --background-color: #f5f7fa;
    --card-background: #ffffff;
    --text-color: #333333;
    --text-light: #666666;
    --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    --transition: all 0.3s ease;
}

body {
    background-color: #4158D0;
    background-image: 
        linear-gradient(43deg, #4158D0 0%, #C850C0 46%, #FFCC70 100%);
    min-height: 100vh;


    font-family: 'Poppins', sans-serif;
    
    color: var(--text-color);
    line-height: 1.6;
    padding: 20px;
    margin: 0;
}

h1 {
    text-align: center;
    color: #ffffff; /* Changed to white for better contrast */
    font-weight: 600;
    margin-bottom: 30px;
    font-size: 2.5rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2); /* Added shadow for better readability */
}

form {
    display: flex;
    justify-content: center;
    margin-bottom: 30px;
}

input[type="text"], select {
    padding: 12px 15px;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    margin-right: 10px;
    width: 300px;
    font-size: 16px;
    font-family: 'Poppins', sans-serif;
    transition: var(--transition);
}

input[type="text"]:focus, select:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.2);
}

button {
    background-color: var(--primary-color);
    color: white;
    border: none;
    border-radius: 7px;
    padding: 5px 12px;
    font-size: 16px;
    cursor: pointer;
    transition: var(--transition);
    font-weight: 500;
    font-family: 'Poppins', sans-serif;
}

button:hover {
    background-color: #2980b9;
    transform: translateY(-2px);
}

.sort-form {
    text-align: center;
    margin-bottom: 30px;
}

.book-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    justify-content: center;
}

.book-card {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.25);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.2);
    border-radius: 12px;
    padding: 10px;
    transition: var(--transition);
    display: flex;
    flex-direction: column;
    align-items: center; /* Changed from baseline to center */
}

.book-cover {
    width: 75%;
    height: 375px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 15px;
    margin-top: 15px;
    display: block; /* Added to ensure proper centering */
    margin-left: auto; /* Added for horizontal centering */
    margin-right: auto; /* Added for horizontal centering */
}

.book-details {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    width: 100%; /* Added to ensure full width of text content */
    align-items: center; /* Added to center text content */
    text-align: center; /* Added to center text content */
}

.book-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}

.stars {
    color: #f1c40f; /* Brighter, more saturated yellow */
    text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2); /* Added shadow for better contrast */
    font-size: 1.2rem;
    letter-spacing: 1px; /* Reduced from 2px to 1px */
    margin: 0 2px; /* Reduced from 5px to 2px */
}

.book-title {
    font-size: 1.2rem;
    font-weight: 600;
    margin: 0 0 10px;
    color: #1a1a1a; /* Darker color for better contrast */
}

.book-author {
    font-size: 0.9rem;
    color: #333333; /* Darker color for better contrast */
    margin: 0 0 15px;
    font-weight: 400;
}

.book-info {
    font-size: 0.9rem;
    color: #1a1a1a; /* Darker color for better contrast */
    margin: 5px 0;
}

.rating {
    display: flex;
    align-items: center;
    margin-top: 10px;
}

.rating-stars {
    color: #f1c40f;
    font-size: 1.2rem;
    margin-right: 2px;
}

.delete{
    margin-top:30px;
        background-color:#e12901;
}

.delete:hover {
    background-color: #800000;
    transform: translateY(-2px);
}

.edit{
    margin-top: 30px;
    background-color: #2c3e50;
}
.edit:hover{
    background-color: #333333;
    transform: translateY(-2px);
}
.actions{
    display: flex;
    gap:10px;
}
@media (max-width: 768px) {
    .book-list {
        grid-template-columns: 1fr;
    }

    input[type="text"], select {
        width: 100%;
        margin-bottom: 10px;
    }

    form {
        flex-direction: column;
    }

    button {
        width: 100%;
    }
    
}
    </style>
</head>
<body>
    <h1>Book Tracker</h1>
    <form action="/search" method="POST">
        <input type="text" name="title" placeholder="Book Title" required>
        <button type="submit">Add Book</button>
    </form>
    <div class="sort-form">
        <form action="/sort" method="GET">
            
            <select id="sort" name="sort">
                <option value="date">Date Read</option>
                <option value="rating">Rating</option>
            </select>
            <button type="submit">Sort</button>
        </form>
    </div>
    <h1>My Book List</h1>
    <div class="book-list">
        <% books.forEach(book => { %>
            <div class="book-card">
                <img src="<%= book.cover_url %>" alt="Cover of <%= book.title %>" class="book-cover">
                <div class="book-details">
                    <div class="book-title"><%= book.title %></div>
                    <div class="book-author"><%= book.author %></div>
                    <p class="book-info">Your Rating: <span class="stars">
                        <% for(let i = 1; i <= 5; i++) { %>
                            <% if (i <= book.rating) { %>
                                ★
                            <% } else { %>
                                ☆
                            <% } %>
                        <% } %>
                    </span>(<%= book.rating ? book.rating : 'Not rated yet' %>)</p>
                    <p class="book-info">Date Read: <%= book.date_read ? new Date(book.date_read).toLocaleDateString() : 'Not specified' %></p>
                </div>
                <div class="actions">
                    <form action="/delete/<%= book.id %>" method="POST">
                        <button class="delete" type="submit">Delete</button>
                    </form>
                    <form action="/edit/<%= book.id %>" method="POST">
                        <button class="edit" type="submit">Edit</button>
                    </form>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>
