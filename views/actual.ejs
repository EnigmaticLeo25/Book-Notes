<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Collection</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --transition: all 0.3s ease-in-out;
        }

        body {
            font-family: 'Poppins', sans-serif; 
            margin: 0;
            padding: 0;
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #6B8DD6 100%);
            background-attachment: fixed;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        h1 {
            text-align: center;
            color: #ffffff;
            font-weight: 600;
            margin-bottom: 30px;
            font-size: 2.5rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }

        

.book-grid {
    display: grid;
    grid-template-columns: 1fr; /* Changed from repeat(auto-fill) to single column */
    gap: 2rem;
    padding: 1rem;
    max-width: 800px; /* Added to keep cards from getting too wide */
    margin: 0 auto; /* Center the grid */
}

.book-card {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.25);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.2);
    border-radius: 12px;
    padding: 20px;
    transition: var(--transition);
    display: flex;
    flex-direction: row; /* Changed from column to row */
    align-items: center;
    gap: 2rem; /* Added space between image and content */
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
}

.book-card.show {
    opacity: 1;
    transform: translateY(0);
}

.book-cover {
    width: 200px;
    height: 300px;
    object-fit: cover;
    border-radius: 8px;
    margin: 0;
    flex-shrink: 0;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2),  /* Regular shadow */
                0 8px 16px rgba(0, 0, 0, 0.1);  /* Larger, softer shadow */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.book-cover:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3),  /* Enhanced shadow on hover */
                0 12px 24px rgba(0, 0, 0, 0.15);
}

.book-details {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    align-items: flex-start; /* Changed from center to flex-start */
    text-align: left; /* Changed from center to left */
}

@media (max-width: 768px) {
    .book-card {
        flex-direction: column; /* Stack vertically on mobile */
        padding: 15px;
    }

    .book-cover {
        width: 75%; /* Make image wider on mobile */
        height: 300px;
        margin-bottom: 15px;
    }

    .book-details {
        align-items: center; /* Center align text on mobile */
        text-align: center;
    }
}



        .book-title {
            font-size: 1.2rem;
            font-weight: 600;
            margin: 0 0 10px;
            color: #1a1a1a;
        }

        .book-author {
            font-size: 0.9rem;
            color: #333333;
            margin: 0 0 15px;
            font-weight: 400;
        }

        .book-info {
            font-size: 0.9rem;
            color: #1a1a1a;
            margin: 5px 0;
        }

        .stars {
            color: #f1c40f;
            text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
            font-size: 1.2rem;
            letter-spacing: 1px;
            margin: 0 2px;
        }

        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }

            .book-grid {
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
                gap: 1rem;
            }

            .book-cover {
                height: 300px;
            }

            h1 {
                font-size: 2rem;
            }
        }

        .intro-section {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 3rem;
            border: 1px solid rgba(255, 255, 255, 0.2);
            animation: fadeIn 0.8s ease-out;
        }

        .intro-content {
            max-width: 800px;
            margin: 0 auto;
        }

        .intro-text {
            color: #ffffff;
            font-size: 1.1rem;
            line-height: 1.6;
            margin: 1.5rem 0;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
        }

        .stats-container {
            display: flex;
            justify-content: center;
            gap: 3rem;
            margin-top: 2rem;
        }

        .stat-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            color: #ffffff;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .stat-label {
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            opacity: 0.9;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @media (max-width: 768px) {
            .intro-section {
                padding: 1.5rem;
                margin: 1rem;
            }
            
            .stats-container {
                gap: 2rem;
            }
            
            .stat-number {
                font-size: 2rem;
            }
        }

        .book-review {
            margin-top: 15px;
            padding-top: 15px;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
            width: 100%;
        }

        .review-text {
            font-size: 0.9rem;
            line-height: 1.5;
            color: #444;
            margin: 0;
            text-align: left;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="intro-section">
            <div class="intro-content">
                <h1>Library Collection</h1>
                <p class="intro-text">Welcome to my personal reading journey! I'm Ethan, a software developer and avid reader. This digital library catalogs my reading adventures, complete with ratings and reflections on each book I've encountered.</p>
                <div class="stats-container">
                    <div class="stat-item">
                        <span class="stat-number"><%= books.length %></span>
                        <span class="stat-label">Books Read</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number"><%= new Date().getFullYear() %></span>
                        <span class="stat-label">Reading Since</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="book-grid">
            <% books.forEach(book => { %>
                <div class="book-card">
                    <img src="<%= book.cover_url %>" alt="<%= book.title %> cover" class="book-cover">
                    <div class="book-details">
                        <div class="book-title"><%= book.title %></div>
                        <div class="book-author"><%= book.author %></div>
                        <div class="book-info">
                            Rating: 
                            <span class="stars">
                                <% for(let i = 1; i <= 5; i++) { %>
                                    <% if (i <= book.rating) { %>
                                        ★
                                    <% } else { %>
                                        ☆
                                    <% } %>
                                <% } %>
                            </span>
                            (<%= book.rating ? book.rating : 'Not rated yet' %>)
                        </div>
                        <p class="book-info">Date Read: <%= book.date_read ? new Date(book.date_read).toLocaleDateString() : 'Not specified' %></p>
                        <div class="book-review">
                            <p class="review-text"><%= book.review || 'No review yet.' %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <script>
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('show');
                }
            });
        }, {
            threshold: 0.1
        });

        document.querySelectorAll('.book-card').forEach((card) => {
            observer.observe(card);
        });
    </script>
</body>
</html>